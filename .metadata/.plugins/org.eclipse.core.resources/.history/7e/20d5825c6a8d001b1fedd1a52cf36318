// 导入必需的 java 库
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.util.*;

public class HttpRequestTrain extends HttpServlet {

	  private String name;
	  private String student_no;

	  public void init() throws ServletException
	  {
	      // 执行必需的初始化
		  name = "阚东";
		  student_no = "919106840420";
	  }

	  public void doGet(HttpServletRequest request,
	                    HttpServletResponse response)
	            throws ServletException, IOException
	  {
	      // 设置响应内容类型
	      //response.setContentType("text/html");
		  response.setContentType("text/html;charset=gb2312"); //告知客户端使用哪种码表
	      //response.setCharacterEncoding("GBK");//设置response所使用的码表

	      // 实际的逻辑是在这里
	      PrintWriter out = response.getWriter();
	      out.println("<h1>" + "getContextPath():" + request.getContextPath() + "</h1>");
	      out.println("<br>");

	        Enumeration headerNames = request.getHeaderNames();
	        while (true) {
	            String s = headerNames.nextElement();
	            if (Strings.isNullOrEmpty(s)) {
	                break;
	            }
	            System.out.println(s + "      :    " + request.getHeader(s));
	        }
	      //out.println("<h1>" + "getHeaderNames():" + request.getHeaderNames() + "</h1>");
	      out.println("<br>");
	      out.println("<h1>" + "getPathInfo():" + request.getPathInfo() + "</h1>");
	      out.println("<br>");
	      out.println("<h1>" + "getServletPath():" + request.getServletPath() + "</h1>");
	      
	  }
	  
	  public void destroy()
	  {
	      // 什么也不做
	  }
	}
